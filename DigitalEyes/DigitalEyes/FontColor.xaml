            <TextBlock x:Name="ApplicationTitle" Text="DIGITAL EYES" Style="{StaticResource PhoneTextNormalStyle}"/>
            <TextBlock x:Name="PageTitle" Text="text color" Margin="9,-7,0,0" Style="{StaticResource PhoneTextTitle1Style}"/>
